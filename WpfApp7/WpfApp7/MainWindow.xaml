<Window x:Class="WpfApp7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="MainWindow" Height="622.101" Width="1058.151">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="26"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" Grid.Column="2" BorderThickness="1">
            <Image x:Name="viewIMG" />
        </Border>
        <ListBox x:Name="imgList" SelectionChanged="imgList_SelectionChanged"/>
        <Button x:Name="AddImg" Content="+" Grid.Column="1" Margin="0,0,0,333" VerticalAlignment="Center" Height="258" FontWeight="Bold" FontSize="14" Click="addImg_Click"/>
        <Button x:Name="DelImg" Content="-" Grid.Column="1" Margin="0,337,0,0" VerticalAlignment="Center" Height="254" FontWeight="Bold" FontSize="14" Click="delImg_Click"/>
        <Button x:Name="updateList" Content="⟳" Grid.Column="1" Margin="0,263,0,259" VerticalAlignment="Center" Height="69" FontWeight="Bold" FontSize="14" Click="updateList_Click"/>
    </Grid>
</Window>
